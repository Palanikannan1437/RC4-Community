{
    "extends": "tsconfig/react-library.json",
    "include": [
        "."
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ],
    "compilerOptions": {
        "jsx": "react",
        "lib": [
            "DOM"
        ],
        "paths": {
            "@lib/*": [
                "./lib/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@/*": [
                "./*"
            ]
        }
    }
}