{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "incremental": true,
    "noEmit": false,
    "noEmitOnError": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@core/*": ["./src/core/*"],
      "@ui/*": ["./src/ui/*"],
      "@lib/*": ["./lib/*"],
    },
    "strictNullChecks": true
  }
}
